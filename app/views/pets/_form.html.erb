<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :breed %>
  <%= f.text_field :breed %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :adoptable %>
  <% if local_assigns[:adopt] %>
    <%= f.check_box :adoptable, value: true %>
  <% else %>
    <%= f.check_box :adoptable %>
  <% end %>

  <%= f.submit %>
<% end %>